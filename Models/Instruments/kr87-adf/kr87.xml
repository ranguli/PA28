<?xml version="1.0"?>
<!--
KR-87
Bendix/King ADF Reciever
Syd Adams; Benedikt Wolf (D-ECHO)
-->
<PropertyList>
	<path>kr87.ac</path>
	<animation>
		<type>material</type>
		<object-name>kr87.btn.adf</object-name>
		<object-name>kr87.btn.bfo</object-name>
		<object-name>kr87.btn.frq</object-name>
		<object-name>kr87.btn.fltet</object-name>
		<object-name>kr87.btn.setrst</object-name>
		<object-name>kr87.knb.vol</object-name>
		<object-name>kr87.knb.big</object-name>
		<object-name>kr87.knb.small</object-name>
		<emission>
			<red>0.6</red>
			<green>0.6</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	<animation>
		<name>in-use-leds</name>
		<object-name>freq.001</object-name>
		<object-name>freq.002</object-name>
		<object-name>freq.003</object-name>
		<object-name>freq.004</object-name>
	</animation>
	<animation>
		<name>standby-leds</name>
		<object-name>stby.001</object-name>
		<object-name>stby.002</object-name>
		<object-name>stby.003</object-name>
		<object-name>stby.004</object-name>
	</animation>
	<animation>
		<type>select</type>
		<object-name>ant.annun</object-name>
		<object-name>adf.annun</object-name>
		<object-name>bfo.annun</object-name>
		<object-name>et.annun</object-name>
		<object-name>frq.annun</object-name>
		<condition>
			<property>/instrumentation/adf[0]/operable</property>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>in-use-leds</object-name>
		<object-name>standby-leds</object-name>
		<condition>
			<and>
				<property>instrumentation/adf[0]/power-btn</property>
				<greater-than>
					<property>systems/electrical/outputs/adf</property>
					<value>9</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>freq.001</object-name>
		<condition>
			<and>
				<property>instrumentation/adf[0]/power-btn</property>
				<greater-than>
					<property>systems/electrical/outputs/adf</property>
					<value>9</value>
				</greater-than>
				<greater-than>
					<property>instrumentation/adf[0]/frequencies/selected-khz</property>
					<value>999</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>stby.001</object-name>
		<condition>
			<and>
				<property>instrumentation/adf[0]/power-btn</property>
				<or>
					<greater-than>
						<property>instrumentation/adf[0]/frequencies/standby-khz</property>
						<value>999</value>
					</greater-than>
					<equals>
						<property>instrumentation/adf[0]/modes/stby</property>
						<value>1</value>
					</equals>
				</or>
				<greater-than>
					<property>systems/electrical/outputs/adf</property>
					<value>9</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>stby</object-name>
		<condition>
			<and>
				<property>instrumentation/adf[0]/power-btn</property>
				<greater-than>
					<property>instrumentation/adf[0]/modes/stby</property>
					<value>0</value>
				</greater-than>
				<greater-than>
					<property>systems/electrical/outputs/adf</property>
					<value>9</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>kr87.knb.vol</object-name>
		<property>instrumentation/adf[0]/volume</property>
		<factor>250</factor>
		<center>
			<y-m>0.037265</y-m>
			<z-m>-0.006034</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/volume</property>
				<min>0</min>
				<max>1</max>
				<wrap>0</wrap>
				<factor>0.05</factor>
			</binding>
		</action>
	</animation>
	<!--    FREQUENCIES    -->
	<animation>
		<type>textranslate</type>
		<object-name>freq.001</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>freq.002</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>freq.003</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>freq.004</object-name>
		<property>instrumentation/adf[0]/frequencies/selected-khz</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<!--    Standby -->
	<animation>
		<type>textranslate</type>
		<object-name>stby.001</object-name>
		<property>instrumentation/adf[0]/frequencies/standby-khz</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>stby.002</object-name>
		<property>instrumentation/adf[0]/frequencies/standby-khz</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>stby.003</object-name>
		<property>instrumentation/adf[0]/frequencies/standby-khz</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>stby.004</object-name>
		<property>instrumentation/adf[0]/frequencies/standby-khz</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>ant.annun</object-name>
		<condition>
			<not>
				<property>/instrumentation/adf[0]/adf-btn</property>
			</not>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>adf.annun</object-name>
		<condition>
		<property>/instrumentation/adf[0]/adf-btn</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>bfo.annun</object-name>
		<condition>
			<property>/instrumentation/adf[0]/bfo-btn</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>frq.annun</object-name>
		<condition>
		<equals>
			<property>/instrumentation/adf[0]/display-mode</property>
			<value type="int">0</value>
		</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>flt.annun</object-name>
		<condition>
		<equals>
			<property>/instrumentation/adf[0]/display-mode</property>
			<value type="int">1</value>
		</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>et.annun</object-name>
		<condition>
		<equals>
			<property>/instrumentation/adf[0]/display-mode</property>
			<value type="int">2</value>
		</equals>
		</condition>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>kr87.knb.small</object-name>
		<property>instrumentation/adf[0]/small-knob</property>
		<factor>1</factor>
		<center>
			<y-m>0.063545</y-m>
			<z-m>-0.000978</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/frequencies/standby-khz</property>
				<factor>1</factor>
				<min>100</min>
				<max>1300</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/small-knob</property>
				<factor>10</factor>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>kr87.knb.big</object-name>
		<property>instrumentation/adf[0]/big-knob</property>
		<factor>1</factor>
		<center>
			<y-m>0.063545</y-m>
			<z-m>-0.000978</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/frequencies/standby-khz</property>
				<factor>100</factor>
				<min>100</min>
				<max>1300</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/adf[0]/big-knob</property>
				<factor>10</factor>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>kr87.btn.adf</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/adf[0]/adf-btn</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>kr87.btn.adf</object-name>
		<property>instrumentation/adf[0]/adf-btn</property>
		<factor>0.001</factor>
		<center>
			<x-m>0.00</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>kr87.btn.bfo</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/adf[0]/bfo-btn</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/adf[0]/bfo-btn-pressed</property>
			</binding>
			<mod-up>
				<binding>
					<command>property-toggle</command>
					<property>instrumentation/adf[0]/bfo-btn-pressed</property>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>kr87.btn.bfo</object-name>
		<property>instrumentation/adf[0]/bfo-btn-pressed</property>
		<factor>0.001</factor>
		<center>
			<x-m>0.00</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>kr87.btn.frq</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-swap</command>
				<property>/instrumentation/adf[0]/frequencies/selected-khz</property>
				<property>/instrumentation/adf[0]/frequencies/standby-khz</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/adf[0]/display-mode</property>
				<value type="int">0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/frq-btn</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/adf[0]/frq-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>kr87.btn.frq</object-name>
		<property>instrumentation/adf[0]/frq-btn</property>
		<factor>0.001</factor>
		<center>
			<x-m>0.00</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>kr87.btn.fltet</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/adf[0]/display-mode</property>
				<step>1</step>
				<min>1</min>
				<max>3</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/flt-et-btn</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/adf[0]/flt-et-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>kr87.btn.fltet</object-name>
		<property>instrumentation/adf[0]/flt-et-btn</property>
		<factor>0.001</factor>
		<center>
			<x-m>0.00</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>kr87.btn.setrst</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/adf[0]/set-rst-btn</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/adf[0]/set-rst-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>kr87.btn.setrst</object-name>
		<property>instrumentation/adf[0]/set-rst-btn</property>
		<factor>0.001</factor>
		<center>
			<x-m>0.00</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
</PropertyList>
